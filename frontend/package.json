{
  "name": "collaborative-wall",
  "version": "1.0.0-develop-pedago.202404151253",
  "description": "Collaborative editor for ENT Core.",
  "homepage": "https://github.com/OPEN-ENT-NG/collaborative-wall#readme",
  "bugs": {
    "url": "https://github.com/OPEN-ENT-NG/collaborative-wall/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OPEN-ENT-NG/collaborative-wall.git"
  },
  "license": "GPL-3.0",
  "author": "Edifice",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "clean": "concurrently \"pnpm:clean:*\"",
    "clean:dist": "rm -rf dist",
    "clean:lighthouse": "rm -rf .lighthouseci",
    "clean:modules": "rm -rf node_modules",
    "clean:package": "rm -f pnpm-lock.yaml && rm -f package.json",
    "dev": "vite",
    "fix": "eslint --fix .",
    "format": "pnpm format:check && pnpm format:write",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "lighthouse": "pnpm clean:lighthouse && lhci autorun",
    "lint": "eslint .",
    "pre-commit": "lint-staged",
    "prepare": "cd .. && husky install frontend/.husky",
    "preview": "vite preview"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "pnpm run format",
      "pnpm run fix"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "6.1.0",
    "@dnd-kit/modifiers": "7.0.0",
    "@dnd-kit/sortable": "8.0.0",
    "@dnd-kit/utilities": "3.2.2",
    "@edifice-ui/editor": "develop-pedago",
    "@edifice-ui/icons": "develop-pedago",
    "@edifice-ui/react": "develop-pedago",
    "@mantine/hooks": "7.7.1",
    "@react-spring/web": "9.7.3",
    "@tanstack/react-query": "5.8.4",
    "@tiptap/pm": "2.0.3",
    "@tiptap/react": "2.0.3",
    "@tiptap/starter-kit": "2.0.3",
    "@uidotdev/usehooks": "2.4.1",
    "clsx": "2.0.0",
    "dayjs": "1.11.10",
    "i18next": "23.8.1",
    "i18next-http-backend": "2.4.2",
    "ode-explorer": "develop-pedago",
    "perfect-cursors": "1.0.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.12",
    "react-hook-form": "7.49.2",
    "react-i18next": "13.5.0",
    "react-router-dom": "6.21.3",
    "react-use-websocket": "4.8.1",
    "react-zoom-pan-pinch": "3.4.2",
    "uuid": "9.0.1",
    "zustand": "4.5.0"
  },
  "devDependencies": {
    "@axe-core/react": "4.8.4",
    "@tanstack/react-query-devtools": "5.8.4",
    "@types/node": "20.11.13",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "8.2.2",
    "csstype": "3.1.3",
    "edifice-bootstrap": "develop-pedago",
    "edifice-ts-client": "develop-pedago",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.1",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "vite": "5.0.12",
    "vite-tsconfig-paths": "4.3.1"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": "18 || 20"
  }
